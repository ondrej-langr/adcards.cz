<div class="card">
    {% for material in materials %}
        <div class="card-body" x-show='_materialId === {{ material.id }}'
             {% if (state.form.values.materialId != material.id) %}style='display: none'{% endif %}
        >
            {% for size in material.getCardSizes() %}
                <div class="checkbox-around col-6 col-lg-6 col-sm-6 col-xl-3">
                    <input type="radio" value="{{ size.getId() }}" id="size-{{ size.getId() }}" name="size"
                           x-model.number='_sizeId' />
                    <label for="size-{{ size.getId() }}">
                        <div class="label-image">
                            {% set currentImage = getImage(size.getImage(), 65) %}
                            <img alt='' src="{{ currentImage.src }}" width="{{ currentImage.width }}"
                                 height="{{ currentImage.height }}" class='h-auto'>
                        </div>
                        <div class="info">
										<span class="label-name">
											<small>{{ size.getWidth() }}x{{ size.getHeight() }}cm</small>
										</span>
                            <span class="label-price">{{ size.getPrice() }}
                                {{ 'Kƒç'|t }}</span>
                        </div>
                    </label>
                </div>
            {% endfor %}
        </div>
    {% endfor %}
</div>