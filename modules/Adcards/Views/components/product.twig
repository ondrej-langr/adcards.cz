<!-- start @modules:Adcards/components/product.twig -->
<div id="product-item-{{ id }}" class="col-12 col-lg-4 col-md-4 col-sm-6 col-xl-4 shop-box">
    <a href='{{ url_for('productUnderpage', { 'productId': id }) }}'>
        {% set currentImage = getImage(images[0], 440) %}
        <img src="{{ currentImage.src }}" width="{{ currentImage.width }}" height="{{ currentImage.height }}"
             alt="Obrázek produktu">
    </a>
    <a class='hover:underline' href='{{ url_for('productUnderpage', { 'productId': id }) }}'>
        <h2>{{ name }}</h2>
    </a>
    <div class="price">{{ price }} Kč</div>
    <p>{{ description }}</p>
    {{ include("@modules:Adcards/components/add-product-to-cart.twig") }}
</div>
<!-- end @modules:Adcards/components/product.twig -->