<div class="material">
    <h2>{{ "Vyberte materiál"|t }}</h2>
    <div class="material-content">
       {% for material in cards.materials %}
            <div class="col-12 col-lg-6 col-md-6 col-sm-6 col-xl-6 material-box">
                {% set currentImage = image(material.image, 440) %}
                <img src="{{ currentImage.src }}" width="{{ currentImage.width }}" height="{{ currentImage.height }}">
                <h2>{{ material.name }}</h2>
                <p>{{ material.description }}</p>
                <a href="{{ url_for('builder') }}?material={{material.id}}" class="appearance-button d-block text-center">
                    {{ "Přejit k výběru designu"|t }}
                </a>
            </div>
       {% endfor %}
    </div>
</div>
